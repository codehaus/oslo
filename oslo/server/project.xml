<?xml version="1.0" encoding="ISO-8859-1"?>
<project>
    <extends>${basedir}/../project.xml</extends>
    <pomVersion>3</pomVersion>
    <id>oslo-server</id>
    <currentVersion>0.1</currentVersion>
    <groupId>oslo</groupId>
    <name>oslo-server</name>

        <!-- jar files the project is dependent on -->
    <dependencies>
        <!-- Prevayler -->
        <dependency>
            <id>prevayler</id>
            <version>2.00.000dev</version>
        </dependency>

        <!-- Sequence diagram viewer -->
        <dependency>
            <id>sequence</id>
            <version>1.0</version>
        </dependency>

        <!-- Oslo dependencies -->
        <dependency>
            <groupId>oslo</groupId>
            <artifactId>oslo-common</artifactId>
            <version>0.1</version>
        </dependency>

        <dependency>
            <groupId>oslo</groupId>
            <artifactId>oslo-plugins</artifactId>
            <version>0.1</version>
        </dependency>
    </dependencies>

    <!-- build information for the project -->
    <build>
        <nagEmailAddress>christian@inx-soft.com</nagEmailAddress>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/NaughtyTest.java</exclude>
            </excludes>
        </unitTest>

        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>