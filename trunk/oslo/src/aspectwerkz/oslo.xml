<?xml version="1.0"?>
<aspectwerkz>
    <advice name="logging"
        advice="org.oslo.aspects.LoggingAdvice"
        deployment-model="perJVM"/>

    <advice name="sequence"
        advice="org.oslo.aspects.sequence.SequenceAdvice"
        deployment-model="perJVM"/>

    <!--<aspect class="org.oslo.sample.*">
        <pointcut type="method" pattern="* do*(..)">
            <advice-ref name="logging"/>
        </pointcut>
    </aspect>-->

    <aspect class="org.oslo.sample.*">
        <pointcut type="callerSide" pattern="*#* d*(..)">
            <advice-ref name="sequence"/>
        </pointcut>
        <pointcut type="method" pattern="* do*(..)">
            <advice-ref name="logging"/>
        </pointcut>
    </aspect>
</aspectwerkz>