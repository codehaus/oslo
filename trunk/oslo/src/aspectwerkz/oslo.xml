        advice="org.oslo.client.aspects.performance.MethodPerformanceAdvice"
        deployment-model="perJVM"/>

    <advice name="callersidesequence"
        advice="org.oslo.client.aspects.sequence.SequenceCallerSideAdvice"
        deployment-model="perJVM"/>

    <!--<aspect class="org.oslo.sample.*">
        <pointcut type="method" pattern="* do*(..)">
            <advice-ref name="logging"/>
        </pointcut>
    </aspect>-->

    <aspect class="org.oslo.sample.*">
        <pointcut type="callerSide" pattern="*#* d*(..)">
            <advice-ref name="callersidesequence"/>
        </pointcut>

        <pointcut type="method" pattern="* *(..)">
            <advice-ref name="performance"/>
        </pointcut>
    </aspect>
</aspectwerkz>